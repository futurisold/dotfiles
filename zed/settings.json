// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "debugger": {
    "dock": "bottom"
  },
  "icon_theme": "Bearded Icon Theme",
  "show_edit_predictions": true,
  "edit_predictions": {
      "disabled_globs": [],
      "mode": "eager",
      "enabled_in_text_threads": true
  },
  "agent": {
    "inline_assistant_model": {
      "provider": "anthropic",
      "model": "claude-opus-4-1-thinking-latest"
    },
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "default_model": {
      "provider": "openai",
      "model": "gpt-5"
    }
  },
  "features": {
      "edit_prediction_provider": "supermaven"
  },
  "language_models": {
  },
  "ssh_connections": [
    {
      "host": "extensity",
      "projects": [
        {
          "paths": ["~/dev"]
        }
      ]
    }
  ],
  "ui_font_size": 15,
  "buffer_font_size": 14,
  "buffer_font_family": "Red Hat Mono",
  "buffer_font_weight": 500,
  "theme": "Ros√© Pine",
  "experimental.theme_overrides": {
    "panel.focused_border": "#524f67",
    "ignored": "#504c63",
    "syntax": {
      "keyword": { "font_style": "normal", "font_weight": 700 },
      "keyword.control": { "font_style": "normal", "font_weight": 700 },
      "keyword.declaration": { "font_style": "normal", "font_weight": 700 },
      "keyword.function": { "font_style": "normal", "font_weight": 700 },
      "keyword.import": { "font_style": "normal", "font_weight": 700 },
      "keyword.operator": { "font_style": "normal", "font_weight": 700, "color": "#30728f" },
      "keyword.operator.logical": { "font_style": "normal", "font_weight": 700, "color": "#30728f" },
      "keyword.operator.word": { "font_style": "normal", "font_weight": 700, "color": "#30728f" },
      "comment": { "font_style": "italic" },
      "string": { "font_style": "normal", "color": "#96a5c8" },
      "string.escape": { "color": "#96a5c8", "font_style": "normal" },
      "constant.escape": { "color": "#96a5c8", "font_style": "normal" },
      "comment.doc": { "font_style": "italic" },
      "constant": { "color": "#907aa9" }
    }
  },
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "on_yank"
  },
  "format_on_save": "off",
  "enable_language_server": true,
  "tab_size": 4,
  "relative_line_numbers": true,
  "languages": {
    "Ruby": {
      "language_servers": ["!solargraph"]
    },
    "Python": {
      "show_edit_predictions": true,
      "format_on_save": "off",
      "enable_language_server": true,
      "language_servers": ["pyright"]
    },
    "JSON": {
      "format_on_save": "on",
      "show_edit_predictions": true
    },
    "LaTeX": {
      "format_on_save": "on",
      "show_edit_predictions": true,
    }
  },
  "lsp": {
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "off",
          "typeCheckingMode": "off",
          "extraPaths": ["/Users/futurisold/devspace/projects/symbolicai"]
        },
        "python": {
            "pythonPath": "/Users/futurisold/miniconda3/envs/symai/bin/python"
        }
      }
    },
    "texlab": {
      "settings": {
        "texlab": {
          "build": {
            "executable": "pdflatex",
            "args": ["-synctex=1", "-interaction=nonstopmode", "%f"],
            "onSave": true,
            "forwardSearchAfter": true
          },
          "forwardSearch": {
            "executable": "zathura",
            "args": [
              "--synctex-forward",
              "%l:1:%f",
              "-x",
              "zed %%{input}:%%{line}",
              "%p"
            ]
          }
        }
      }
    }
  },
  "use_autoclose": true,
  "show_completions_on_input": true,
  "show_completion_documentation": true,
  "scroll_beyond_last_line": "off",
  "current_line_highlight": "line",
  "hard_tabs": false,
  "scrollbar": {
    "show": "never"
  },
  "ensure_final_newline_on_save": true,
  "remove_trailing_whitespace_on_save": true,
  "inlay_hints": {
    "enabled": true
  },
  "soft_wrap": "editor_width"
}
