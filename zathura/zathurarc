# Zathura configuration file
# See man `man zathurarc'

set pages-per-row 1

set scroll-page-aware "true"
set scroll-full-overlap 0.01

set zoom-min 10

set window-title-basename "true"
set selection-clipboard "clipboard"

set default-bg "#000000" # Background (outside)
set default-fg "#f5f5f5" # Foreground

# Text re-coloring after CTRL + R
# set recolor-lightcolor "#f5f5f5"
# set recolor-darkcolor  "#212121"

set recolor-lightcolor "#181818"
set recolor-darkcolor  "#e4e4ef"

set window-width  1920
set window-height 1200
set recolor "true"
set recolor-keephue "true"
set render-loading "true"
set sandbox "none"
set font "inconsolata 16"
